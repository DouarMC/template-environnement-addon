{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "addon/dist/scripts",
    "rootDir": "addon/scripts"
  },
  "include": [
    "addon/scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src"
  ]
}